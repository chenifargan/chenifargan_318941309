<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PromotionsActivity"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:padding="10dp">



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie1_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="2"
            android:minLines="2"
            android:text="15% discount on all winter clothes"
            android:textSize="18sp" />




        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">



            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/movie1_IMG_favorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_heart_empty" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        android:padding="10dp">



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie2_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="2"
            android:minLines="2"
            android:text="1 + 1 on all electrical products"
            android:textSize="18sp" />



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">



            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/movie2_IMG_favorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_heart_empty" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="260dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="10dp">



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie3_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="2"
            android:minLines="2"
            android:text="50% off all shoes"
            android:textSize="18sp" />




        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">



            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/movie3_IMG_favorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_heart_empty" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>




    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="390dp"
        android:background="@color/colorAccent"

        android:orientation="vertical">



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie4_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="2"
            android:minLines="2"
            android:text="10% on computers"
            android:textSize="18sp" />




        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">



            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/movie4_IMG_favorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_heart_empty" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="520dp"
        android:background="@color/colorPrimary"

        android:orientation="vertical"
        android:padding="10dp">



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie5_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="2"
            android:minLines="2"
            android:text="2 + 1 on the cosmetics department"
            android:textSize="18sp" />



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
        >



            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/movie5_IMG_favorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_heart_empty" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView >